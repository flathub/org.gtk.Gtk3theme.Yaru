{
  "id": "org.gtk.Gtk3theme.Yaru",
  "branch": "3.22",
  "runtime": "org.freedesktop.Platform",
  "build-extension": true,
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "21.08",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "Yaru",
      "buildsystem": "simple",
      "build-commands": [
        "ar x yaru-gtk-theme.deb",
        "tar -xf data.tar.zst",

        "install -dm755 /usr/share/runtime/share/themes/Yaru/gtk-3.0",
        "cp -aL usr/share/themes/Yaru/gtk-3.0/* /usr/share/runtime/share/themes/Yaru/gtk-3.0",
        "cp -a usr/share/themes/Yaru/index.theme /usr/share/runtime/share/themes/Yaru"
      ],
      "sources": [
        {
            "type": "file",
            "url": "https://launchpad.net/ubuntu/+archive/primary/+files/yaru-theme-gtk_22.04.3.1_all.deb",
            "dest-filename": "yaru-gtk-theme.deb",
            "sha256": "92f7e63d410f3a6b79e4d3a22e8b765248273ac3760620a09fa0b81b3f141da2"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.Yaru.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.Yaru --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Yaru"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.Yaru.appdata.xml"
        }
      ]
  }
  ]
}
